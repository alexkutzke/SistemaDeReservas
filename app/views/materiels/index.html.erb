<h1>List Materiels</h1>

<%= link_to 'Home', controller: 'welcome' %>
<%= link_to 'New', new_materiel_path %>

<table>
    <tr>
        <th>ID</th>
        <th>Equipament</th>
        <th>Patrimony</th>
        <th>Room</th>
        <th colspan="3"></th>
    </tr>

    <% @materiels.each do |m| %>
        <tr>
            <td><%= m.id %></td>
            <td><%= m.name %></td>
            <td><%= m.patrimony %></td>
            <td><%= m.room.place %></td>
            <td><%= link_to 'Show', materiel_path(m) %></td>
            <td><%= link_to 'Edit', edit_materiel_path(m) %></td>
            <td><%= link_to 'Destroy', materiel_path(m),
                                        method: :delete,
                                        data: { confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
</table>