<%= render :partial => 'layouts/navbar', :locals => {:active => 1} %>
<div class="row" style="margin-top: 100px">
  <div class="col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6">
    <% if @user.errors.any? %>
      <div class="row">
        <div class="col-sm-12">
          <div class="alert alert-danger">
            <h2>
                Atenção:
            </h2>
            <ul>
              <% @user.errors.full_messages.each do | msg | %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
    <% if notice %>
      <p class="alert alert-warning"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <h3 class="title-h3"><i class="fa fa-sign-in"></i> Login</h3>
        </div>
        <div class="row" style="margin-top:5px;">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :email, :class => "sr-only" %><br />
                  <%= f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12" style="margin-top:-20px">
                <div class="form-group">
                  <%= f.label :password, :class => "sr-only" %><br />
                  <%= f.password_field :password, class: 'form-control', placeholder: "Senha", autofocus: true, autocomplete: "off" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <% if devise_mapping.rememberable? -%>
                  <div class="form-group">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.submit "Entrar", class: 'btn btn-green  col-xs-12' %>
                </div>
              </div>
            </div>
          <% end %>

          <div class="row" style="margin-top: 10px">
            <div class="col-md-12">
              <div class="form-group">
                <div class="pull-right">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
