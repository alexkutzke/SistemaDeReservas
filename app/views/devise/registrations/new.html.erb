<%= render :partial => 'layouts/navbar', :locals => {:active => 2} %>
<div class="row" style="margin-top: 100px">
  <div class="col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6">
    <% if @user.errors.any? %>
        <div class="row">
            <div class="col-sm-12">
                <div class="alert alert-danger">
                    <h2>
                        Atenção:
                    </h2>
                    <ul>
                        <% @user.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    <% end %>
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <h3 class="title-h3"><i class="fa fa-plus"></i> Novo usuário</h3>
        </div>
        <div class="row" style="margin-top:5px">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :name, :class => "sr-only" %><br />
                  <%= f.text_field :name, class: 'form-control', placeholder: 'Nome', autofocus: true %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12" style="margin-top:-20px">
                <div class="form-group">
                  <%= f.label :cpf, :class => "sr-only" %><br />
                  <%= f.text_field :cpf, class: 'form-control', placeholder: 'CPF' %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12" style="margin-top:-20px">
                <div class="form-group">
                  <%= f.label :email, :class => "sr-only" %><br />
                  <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12" style="margin-top:-20px">
                <div class="form-group">
                  <%= f.label :registration_number, :class => "sr-only" %><br />
                  <%= f.email_field :registration_number, class: 'form-control', placeholder: 'Matrícula' %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12" style="margin-top:-5px">
                <div class="form-group">
                  <%= f.label :password, :class => "sr-only" %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, class: 'form-control', placeholder: 'Senha', autocomplete: "off" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12" style="margin-top:-20px">
                <div class="form-group">
                  <%= f.label :password_confirmation, :class => "sr-only" %><br />
                  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmar senha', autocomplete: "off" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12" style="margin-top:-5px">
                <div class="form-group">
                  <%= f.label :role_id, 'Perfil' %><br />
                  <%= f.collection_select(:role_id, Role.where.not(id: [1, 2]), :id, :name, {}, {class: "form-control"}) %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12" style="margin-top:0px">
                <div class="form-group">
                  <%= f.submit "Cadastrar", class: 'btn btn-green  col-xs-12' %>
                </div>
              </div>
            </div>
          <% end %>

          <div class="row">
            <div class="col-md-12" style="margin-top:0px">
              <div class="form-group">
                <div class="pull-right">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
