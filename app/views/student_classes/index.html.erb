<h1>List Classes</h1>

<%= link_to 'Home', controller: 'welcome' %>
<%= link_to 'New', new_student_class_path %>

<table>
    <tr>
        <th>ID</th>
        <th>Class</th>
        <th>Period</th>
        <th colspan="3"></th>
    </tr>

    <% @studentClasses.each do |s| %>
        <tr>
            <td><%= s.id %></td>
            <td><%= s.name %></td>
            <td><%= "#{s.period.semester}Â° period of #{s.period.year}" %></td>
            <td><%= link_to 'Show', student_class_path(s) %></td>
            <td><%= link_to 'Edit', edit_student_class_path(s) %></td>
            <td><%= link_to 'Destroy', student_class_path(s),
                                        method: :delete,
                                        data: { confirm: 'Are you sure ?'} %></td>
        </tr>
    <% end %>
</table>
