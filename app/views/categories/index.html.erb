<h1>List Category</h1>

<%= link_to 'Home', controller: 'welcome' %>
<%= link_to 'New', new_category_path %>

<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th colspan="3"></th>
    </tr>

    <% @categories.each do |c| %>
        <tr>
            <td><%= c.id %></td>
            <td><%= c.name %></td>
            <td><%= link_to 'Show', category_path(c)  %></td>
            <td><%= link_to 'Edit', edit_category_path(c) %></td>
            <td><%= link_to 'Destroy', category_path(c),
                                    method: :delete,
                                    data: { confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
</table>
