<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Start at</th>
      <th>End at</th>
      <th>Reservation</th>
      <th>Description</th>
      <th>Frequency</th>
      <th>State</th>
      <th>Klass</th>
      <th>Discipline</th>
      <th>Classroom</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.start %></td>
        <td><%= event.end %></td>
        <td><%= event.reservation %></td>
        <td><%= event.description %></td>
        <td><%= event.frequency %></td>
        <td><%= event.state %></td>
        <td><%= event.klass %></td>
        <td><%= event.discipline %></td>
        <td><%= event.classroom %></td>
        <td><%= event.user %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

