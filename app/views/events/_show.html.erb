<%= form_for(@event, :html => {class: 'form-horizontal'}) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, 'Descrição', class: 'control-label col-sm-3' %>
    <div class="col-sm-9">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Festa da Ana', disabled: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :user, 'Solicitante', class: 'control-label col-sm-3' %>
    <div class="col-sm-9">
      <%= f.text_field :user, class: 'form-control', placeholder: 'Maria', disabled: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :classroom, 'Sala', class: 'control-label col-sm-3' %>
    <div class="col-sm-9">
      <%= f.text_field :classroom, class: 'form-control', placeholder: 'A01', disabled: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :date_range, '<span style="color:red">*</span> Período'.html_safe, class: 'control-label col-sm-3' %>
    <div class="col-sm-9">
      <%= f.text_field :date_range, class: 'form-control date-range-picker', disabled: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :frequency, 'Semanas', class: 'control-label col-sm-3' %>
    <div class="col-sm-9">
      <%= f.text_field :frequency, class: 'form-control', disabled: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :state, 'Status', class: 'control-label col-sm-3' %>
    <div class="col-sm-9">
      <%= f.text_field :state, class: 'form-control schedule_state', disabled: true %>
    </div>
  </div>

  <div class="form-group pull">
    <div class="col-sm-offset-3 col-sm-9">
      <div class="pull-right">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
<% end %>
