<!DOCTYPE html>
<html>
  <head>
    <title>Reservas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': true %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': true %>
    <% if user_signed_in? %>
      <%= stylesheet_link_tag    'management/schedules', media: 'all', 'data-turbolinks-track': true %>
      <%= javascript_include_tag 'management/reservations', 'data-turbolinks-track': true %>
    <% else %>
      <%= stylesheet_link_tag    'welcome', media: 'all', 'data-turbolinks-track': true %>
      <%= javascript_include_tag 'reservations', 'data-turbolinks-track': true %>
    <% end %>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  </head>

  <% if user_signed_in? %>
    <body style="background-color:#F7F7F7">
        <% get_current_user %>
        <%= render :partial => 'layouts/header', :locals => {:name => "JoÃ£o"} %>
        <%= render :partial => 'layouts/sidenav', :locals => {:active => 0} %>
  <% else %>
    <body style="background-color:#ececec">
      <%= render :partial => 'layouts/navbar', :locals => {:active => 0} %>
  <% end %>
  <%= yield %>
  <div id='remote_container'></div>
  </body>
</html>
