<div class='sidenav' style="margin-top:50px">
    <ul>
        <li <% if active == 0 %> class='sidenav-active' <% end %>>
            <%= link_to '<span><i class="fa fa-calendar"></i></span><span>Reservas</span>'.html_safe, management_schedules_path, title: 'Reservas', 'data-toggle' => 'tooltip', 'data-placement' => 'right'  %>
        </li>
