          <% @count = pending_schedules %>
          <% @result = @count > 0 ? "<span class=\"badge\"> #{@count} </span> " : ""  %>
            <%= link_to "<span><i class=\"fa fa-bell\"></i></span><span>Solicitações #{@result}</span>".html_safe, management_solicitations_path, title: 'Solicitações', 'data-toggle' => 'tooltip', 'data-placement' => 'right'  %>
        </li>
