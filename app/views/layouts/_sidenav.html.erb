<div class='sidenav'>
    <ul>
        <p style="text-align: center; padding: 10px" class="avatar">
            <span><img  class="img-circle img-responsive" atl="user-photo" src="../assets/images/user_profile.png"></span>
            <c:set var="nome" value="${fn:split(funcionario.nome, ' ')}" />
            <span style="padding-top:25px;"> ${nome[0]} </span>					
        </p>
        <li <% if active == 1 %> class='sidenav-active' <% end %> >
            <a data-toggle="tooltip" title="Reservas" href="dashboard">
                <span><i class="fa fa-calendar"></i></span>
                <span>Reservas</span>
            </a>
        </li>
        <li <% if active == 2 %> class='sidenav-active' <% end %> >
            <a data-toggle="tooltip" title="Solicitações" href="solicitacoes">
                <span><i class="fa fa-bell"></i></span>
                <span>Solicitações <span class="badge"> 1</span></span>
            </a>
        </li>
        <li  >
            <a data-toggle="tooltip" title="Usuários" href="usuarios">
                <span><i class="fa fa-group"></i></span>
                <span>Usuários</span>
            </a>
        </li>
        <li>
            <%= link_to '<i class="fa fa-institution"></i> Departamentos'.html_safe, controller: 'Departments'  %>
            
        </li>
        <li  >
            <a data-toggle="tooltip" title="Salas" href="salas">
                <span><i class="fa fa-map-marker"></i></span>
                <span>Salas</span>
            </a>
        </li>
        <li  >
            <a data-toggle="tooltip" title="Disciplinas" href="disciplinas">
                <span><i class="fa fa-book"></i></span>
                <span>Disciplinas</span>
            </a>
        </li>
        <li >
            <a data-toggle="tooltip" title="Turmas" href="turmas">
                <span><i class="fa fa-graduation-cap"></i></span>
                <span>Turmas</span>
            </a>
        </li>
        <li  >
            <a data-toggle="tooltip" title="Equipamentos" href="equipamentos">
                <span><i class="fa fa-gavel"></i></span>
                <span>Equipamentos</span>
            </a>
        </li>
        <li >
            <a data-toggle="tooltip" title="Períodos" href="periodos">
                <span><i class="fa fa-clock-o"></i></span>
                <span>Períodos</span>
            </a>
        </li>
    </ul>
</div>