<%= render :partial => 'layouts/sidenav', :locals => {:active => 3} %>
<div class="main-content">
    <div class="row">
        <ol class="breadcrumb">
            <li>
              <%= link_to '<i class="fa fa-calendar"></i> Reservas'.html_safe, management_schedules_path %>
            </li>
            <li><%= link_to '<i class="fa fa-group"></i> Usuários'.html_safe, management_users_path %></li>
            <li><i class="fa fa-plus"></i> Novo Usuário</li>
        </ol>
    </div>
    <div class="form">
        <%= render 'form' %>
    </div>

    <% if can :import, :user %>
      <div class="row">
          <div class="col-md-10">
              <div class="panel panel-default">
                  <div class="panel-body">
                      <%= form_tag 'importar', method: 'post',  multipart: true, class: 'form-horizontal', id: 'new-user-csv' do %>
                          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
                          <div class="form-group">
                              <div class="col-md-12">
                                  <h3 style="border-bottom: 2px solid #ddd; padding-bottom: 5px"><i class="fa fa-plus"></i> Novo Usuário <i style="color: #adadad; font-size: 16px">Arquivo CSV</i></h3>
                              </div>
                          </div>
                          <div class="form-group">
                              <%= label_tag :file, '<span style="color:red">*</span> Arquivo'.html_safe, class: 'control-label col-sm-3' %>
                              <div class="col-sm-7">
                                  <%= file_field_tag :file, class: 'form-control' %>
                              </div>
                          </div>
                          <div class="form-group">
                              <%= label_tag :role, '<span style="color:red">*</span> Perfil'.html_safe, class: 'control-label col-sm-3' %>
                              <div class="col-sm-7">
                                   <%= select_tag(:role_id, options_from_collection_for_select(Role.all, :id, :name) , {:class => "form-control"}) %>
                              </div>
                          </div>
                          <div class="form-group pull">
                              <div class="col-sm-offset-3 col-sm-7">
                                  <div class="pull-right">
                                      <%= link_to 'Voltar', management_users_path, class: 'btn btn-danger' %>
                                      <%= submit_tag('Cadastrar', class: 'btn btn-green') %>
                                  </div>
                              </div>
                          </div>
                      <% end %>
                  </div>
              </div>
          </div>
      </div>
    <% end %>
</div>
