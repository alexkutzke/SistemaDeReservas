<p id="error">
    <% flash.each do |name, msg| -%>
        <div class="row">
            <div class="col-sm-12">
                <div class="alert alert-danger">
                    <%= content_tag :div, msg, class: name %>
                </div>
            </div>
        </div>
    <% end -%>
</p>
<% if @user.errors.any? %>
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-danger">
                <h2>
                    Atenção:
                </h2>
                <ul>
                    <% @user.errors.full_messages.each do | msg | %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
<% end %>

<div class="row">
    <div class="col-md-10">
        <div class="panel panel-default">
            <div class="panel-body">
                <%= form_for([:management, @user], :html => {class: 'form-horizontal'}) do |f| %>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div style="border-bottom: 2px solid #ddd;">
                                <% if @user.new_record? %>
                                    <h3><i class="fa fa-plus"></i> Novo Usuário</h3>
                                <% else %>
                                    <h3><i class="fa fa-edit"></i> Editar Usuário</h3>
                                <% end %>
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        <%= f.label :name, '<span style="color:red">*</span> Nome'.html_safe, class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                            <%= f.text_field :name, class: 'form-control', placeholder: 'João da Silva', autofocus: true %>
                        </div>
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        <%= f.label :email, '<span style="color:red">*</span> Email'.html_safe, class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                            <%= f.email_field :email, class: 'form-control', placeholder: 'email@example.com' %>
                        </div>
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        <%= f.label :cpf, '<span style="color:red">*</span> CPF'.html_safe, class: 'control-label col-sm-3' %>
                        <div class="col-sm-3">
                            <%= f.text_field :cpf, class: 'form-control', placeholder: '999.999.999-99' %>
                        </div>
                        <%= f.label :phone_number, 'Telefone', class: 'control-label col-sm-1' %>
                        <div class="col-sm-3">
                            <%= f.text_field :phone_number, class: 'form-control', placeholder: '(41)3333-3333' %>
                        </div>
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        <%= f.label :password, '<span style="color:red">*</span> Senha'.html_safe, class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                            <%= f.password_field :password, class: 'form-control', placeholder: '********', autocomplete: "off" %>
                        </div>
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        <%= f.label :password_confirmation, '<span style="color:red">*</span> Confirmar senha'.html_safe, class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '*********', autocomplete: "off" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= f.label :role, '<span style="color:red">*</span> Perfil'.html_safe, class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                             <%= f.collection_select(:role_id, Role.get_roles, :id, :name, {}, {class: "form-control"}) %>
                        </div>
                    </div>
                    <div class="form-group pull">
                        <div class="col-sm-offset-3 col-sm-7">
                            <div class="pull-right">
                                <%= link_to 'Voltar', management_users_path, class: 'btn btn-danger' %>
                                <% if @user.new_record? %>
                                    <%= f.submit 'Cadastrar', class: 'btn btn-green' %>
                                <% else %>
                                    <%= f.submit 'Editar', class: 'btn btn-green' %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
