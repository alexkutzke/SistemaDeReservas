<%= render :partial => 'layouts/sidenav', :locals => {:active => 2} %>
<div class="main-content">
    <div class="row">
        <ol class="breadcrumb">
          <li>
            <%= link_to '<i class="fa fa-calendar"></i> Reservas'.html_safe, management_schedules_path %>
          </li>
          <li><i class="fa fa-plus"></i> Importar dados do ensalamento</li>
        </ol>
    </div>

    <p id="error">
        <% flash.each do |name, msg| -%>
            <div class="row">
                <div class="col-sm-12">
                    <div class="alert alert-danger">
                        <%= content_tag :div, msg, class: name %>
                    </div>
                </div>
            </div>
        <% end -%>
    </p>
    <% if @schedule.errors.any? %>
        <div class="row">
            <div class="col-sm-12">
                <div class="alert alert-danger">
                    <h2>
                        Atenção:
                    </h2>
                    <ul>
                        <% @schedule.errors.full_messages.each do | msg | %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    <% end %>

    <div class="form">
      <% if can :import, :schedule %>
        <div class="row">
            <div class="col-md-10">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <%= form_tag 'importar', method: 'post',  multipart: true, class: 'form-horizontal', id: 'new-schedule-csv' do %>
                            <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <h3 style="border-bottom: 2px solid #ddd; padding-bottom: 5px"><i class="fa fa-plus"></i> Importar dados ensalamento <i style="color: #adadad; font-size: 16px">Arquivo CSV</i></h3>
                                </div>
                            </div>
                            <div class="form-group">
                                <%= label_tag :file, '<span style="color:red">*</span> Arquivo'.html_safe, class: 'control-label col-sm-3' %>
                                <div class="col-sm-7">
                                    <%= file_field_tag :file, class: 'form-control' %>
                                </div>
                            </div>
                            <div class="form-group">
                                <%= label_tag :period, '<span style="color:red">*</span> Período'.html_safe, class: 'control-label col-sm-3' %>
                                <div class="col-sm-7">
                                     <%= select_tag(:period_id, options_from_collection_for_select(Period.all, :id, :name) , {:class => "form-control"}) %>
                                </div>
                            </div>
                            <div class="form-group pull">
                                <div class="col-sm-offset-3 col-sm-7">
                                    <div class="pull-right">
                                        <%= link_to 'Voltar', management_schedules_path, class: 'btn btn-danger' %>
                                        <%= submit_tag('Cadastrar', class: 'btn btn-green') %>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
      <% end %>
    </div>
</div>
