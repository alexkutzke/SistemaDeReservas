<% if @period.errors.any? %>
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-danger">
                <h2>
                    Atenção:
                </h2>
                <ul>
                    <% @period.errors.full_messages.each do | msg | %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
<% end %>

<div class="row">
    <div class="col-md-10">
        <div class="panel panel-default">    
            <div class="panel-body"> 
                <%= form_for(@period, :html => {class: 'form-horizontal'}) do |f| %>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div style="border-bottom: 2px solid #ddd;">
                                <% if @period.new_record? %>
                                    <h3><i class="fa fa-plus"></i> Novo Período</h3>
                                <% else %>
                                    <h3><i class="fa fa-edit"></i> Editar Período</h3>
                                <% end %>                                                     
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= f.label :semester, 'Semestre', class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                            <%= f.select(:semester, options_for_select(['1', '2'], @period.semester), {},  {class: "form-control"}) %>
                        </div>
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        <%= f.label :year, 'Ano', class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                            <%= f.number_field :year, class: 'form-control', placeholder: '2017' %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= f.label :state, 'Status', class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                                <%= f.check_box :state, {class: 'checkbox'}, true, false %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= f.label :start_date, 'Data de início', class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                            <%= f.date_field :start_date, class: 'form-control', placeholder: '31/07/2012' %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= f.label :end_date, 'Data de fim', class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                            <%= f.date_field :end_date, class: 'form-control', placeholder: '21/12/2012' %>
                        </div>
                    </div>
                    <div class="form-group pull"> 
                        <div class="col-sm-offset-3 col-sm-7">
                            <div class="pull-right">
                                <%= link_to 'Voltar', periods_path, class: 'btn btn-danger' %>
                                <% if @period.new_record? %>
                                    <%= f.submit 'Cadastrar', class: 'btn btn-green' %>
                                <% else %>
                                    <%= f.submit 'Editar', class: 'btn btn-green' %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>