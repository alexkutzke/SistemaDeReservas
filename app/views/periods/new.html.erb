<h1>New period</h1>

<%= form_for :period, url: periods_path do |f| %>
    <p>
        <%= f.label :semester %><br>
        <%= f.select(:semester, options_for_select(['1', '2'], '1'), {}) %>
    </p>
    <p>
        <%= f.label :year %><br>
        <%= f.text_field :year %>
    </p>
    <p>
        <%= f.label :state %><br>
        <%= f.check_box :state, {}, true, false %>
    </p>
    <p>
        <%= f.label :start_date %><br>
        <%= f.date_field :start_date %>
    </p>
    <p>
        <%= f.label :end_date %><br>
        <%= f.date_field :end_date %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>