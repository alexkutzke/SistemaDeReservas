<h1>List Periods</h1>

<%= link_to 'Home', controller: 'welcome' %>
<%= link_to 'New', new_period_path %>

<table>
    <tr>
        <th>ID</th>
        <th>Semestre</th>
        <th>Ano</th>
        <th>Data de Inicio</th>
        <th>Data fim</th>
        <th colspan="3"></th>
    </tr>
    <% @periods.each do |p| %>
        <tr>
            <td><%= p.id %></td>
            <td><%= p.semester %></td>
            <td><%= p.year %></td>
            <td><%= p.start_date %></td>
            <td><%= p.end_date %></td>
            <td><%= link_to 'Show', period_path(p) %></td>
            <td><%= link_to 'Edit', edit_period_path(p) %></td>
            <td><%= link_to 'Destroy', period_path(p),
                                        method: :delete,
                                        data: { confirm: 'Are you sure?' }  %></td>
        </tr>
    <% end %>
</table>