<h1>New Room</h1>

<%= form_for :room, url: rooms_path do |f| %>
    <p>
        <%= f.label :place, 'Local' %><br>
        <%= f.text_field :place %>
    </p>
    <p>
        <%= f.label :block, 'Bloco' %><br>
        <%= f.text_field :block %>
    </p>
    <p>
        <%= f.label :state %><br>
        <%= f.check_box :state, {}, true, false %>
    </p>
    <p>
        <%= f.label :start_date %><br>
        <%= f.date_field :start_date %>
    </p>
    <p>
        <%= f.label :end_date %><br>
        <%= f.date_field :end_date %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', periods_path %>