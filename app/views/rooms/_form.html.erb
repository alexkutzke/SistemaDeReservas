<%= form_for @room do |f| %>
    <p>
        <%= f.label :place, 'Local' %><br>
        <%= f.text_field :place %>
    </p>
    <p>
        <%= f.label :block, 'Bloco' %><br>
        <%= f.text_field :block %>
    </p>
     <p>
        <%= f.label :capacity %><br>
        <%= f.number_field :capacity %>
    </p>
    <p>
        <%= f.label :state %><br>
        <%= f.check_box :state, {}, true, false %>
    </p>
    <p>
        <%= f.label :category %><br>
        <%= f.collection_select(:category_id, Category.all, :id, :name) %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
