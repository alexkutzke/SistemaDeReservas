<% if @room.errors.any? %>
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-danger">
                <h2>
                    Atenção:
                </h2>
                <ul>
                    <% @room.errors.full_messages.each do | msg | %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
<% end %>

<div class="row">
    <div class="col-md-10">
        <div class="panel panel-default">    
            <div class="panel-body"> 
                <%= form_for(@room, :html => {class: 'form-horizontal'}) do |f| %>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div style="border-bottom: 2px solid #ddd;">
                                <h3><i class="fa fa-plus"></i> Nova Sala</h3>                      
                            </div>
                        </div>
                    </div>   
                    <div class="form-group" style="padding-top: 10px">
                        <%= f.label :place, 'Local', class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                            <%= f.text_field :place, class: 'form-control', placeholder: 'A01', autofocus: true %>
                        </div>
                    </div>               
                    <div class="form-group">
                        <%= f.label :block, 'Bloco', class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                            <%= f.text_field :block, class: 'form-control', placeholder: 'A' %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= f.label :capacity, 'Capacidade', class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                            <%= f.number_field :capacity, class: 'form-control', placeholder: '30' %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= f.label :state, 'Status', class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                                <%= f.check_box :state, {class: 'checkbox'}, true, false %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= f.label :category, 'Categoria', class: 'control-label col-sm-3' %>
                        <div class="col-sm-7">
                             <%= f.collection_select :category_id, Category.all, :id, :name, {}, {class: "form-control"} %>
                        </div>
                    </div>
                    <div class="form-group pull"> 
                        <div class="col-sm-offset-3 col-sm-7">
                            <div class="pull-right">
                                <%= link_to 'Voltar', rooms_path, class: 'btn btn-danger' %>
                                <%= f.submit 'Cadastrar', class: 'btn btn-green' %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
