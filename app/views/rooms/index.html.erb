<h1>List Rooms</h1>

<%= link_to 'Home', controller: 'welcome' %>
<%= link_to 'New', new_room_path %>

<table>
    <tr>
        <th>ID</th>
        <th>Local</th>
        <th>Bloco</th>
        <th>Capacidade</th>
        <th>Category</th>
        <th>Status</th>
        <th colspan="3"></th>
    </tr>
    <% @rooms.each do |r| %>
        <tr>
            <td><%= r.id %></td>
            <td><%= r.place %></td>
            <td><%= r.block %></td>
            <td><%= r.capacity %></td>
            <td><%= r.category %></td>
            <td><%= r.state %></td>
            <td><%= link_to 'Show', room_path(r) %></td>
            <td><%= link_to 'Edit', edit_room_path(r) %></td>
            <td><%= link_to 'Destroy', room_path(r),
                                       method: :delete,
                                       data: { confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
</table>