<div class="main-content">
    <div class="row box">
        <form role="form" class="form">
            <div class="form-group">
                <label class="control-label" for="salas">Sala</label>
                <%= select_tag('classroom', options_from_collection_for_select(@classrooms, 'id', 'room'), class: 'form-control combo-classroom') %>
            </div>
        </form>
    </div>
    <div class="row" >
        <div class="col-md-12" >
            <div id="calendar-background">
                <div id="fullcalendar"></div>
            </div>
        </div>
    </div>
<% if !current_user.nil? %>
      <div class="modal fade" id="new_event">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title">Nova Reserva</h4>
            </div>
            <div class="modal-body">
              <%= render 'events/form', event: @event %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="modal fade" id="show_event">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Reserva</h4>
          </div>
          <div class="modal-body">
            <%= render 'events/show' %>
          </div>
        </div>
      </div>
    </div>
</div>
